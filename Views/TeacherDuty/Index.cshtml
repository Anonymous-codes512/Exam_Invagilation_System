		<!-- Modal -->
		<div class="modal fade" id="assignDutyModal" tabindex="-1" aria-labelledby="assignDutyModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-lg">
				<div class="modal-content">
					<div class="modal-header py-2">
						<h5 class="modal-title" id="assignDutyModalLabel">Assign Duty</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body p-3">
						<form id="assignDutyForm">
							<div class="row g-2">
								<div class="col-md-6">
									<label for="teacherName" class="form-label mb-1">Teacher Name</label>
									<input type="text" id="teacherName" class="form-control form-control-sm" />
								</div>
								<div class="col-md-6">
									<label for="department" class="form-label mb-1">Department</label>
									<input type="text" id="department" class="form-control form-control-sm" />
								</div>
							</div>
							<div class="row g-2 mt-2">
								<div class="col-md-6">
									<label for="date" class="form-label mb-1">Date</label>
									<input type="date" id="date" class="form-control form-control-sm" />
								</div>
								<div class="col-md-6">
									<label for="time" class="form-label mb-1">Time</label>
									<input type="time" id="time" class="form-control form-control-sm" />
								</div>
							</div>
							<div class="row g-2 mt-2">
								<div class="col-md-6">
									<label for="roomNo" class="form-label mb-1">Room Number</label>
									<input type="text" id="roomNo" class="form-control form-control-sm" />
								</div>
								<div class="col-md-6">
									<label for="blockName" class="form-label mb-1">Block Name</label>
									<input type="text" id="blockName" class="form-control form-control-sm" />
								</div>
							</div>
							<div class="row g-2 mt-2">
								<div class="col-md-12">
									<label for="otherInvigilators" class="form-label mb-1">Other Invigilators</label>
									<input type="text" id="otherInvigilators" class="form-control form-control-sm" />
								</div>
							</div>
						</form>
					</div>
					<div class="modal-footer py-2">
						<button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
						<button type="button" class="btn btn-primary btn-sm" onclick="assignDuty()">Save Duty</button>
					</div>
				</div>
			</div>
		</div>



